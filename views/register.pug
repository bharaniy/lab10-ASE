html
    head
        meta(charset='utf-8')
        title Pug Registration page
        link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        link(rel='stylesheet', href='/registercss.css')

    body
        #register
            h3.text-center.text-black.pt-5 Registration Form
            .container
                #register-row.row.justify-content-center.align-items-center
                    #register-column.col-md-6
                        #register-box.col-md-12
                            form#register-form.form(action='/register', method='POST')
                                .form-group
                                    label  First Name:
                                    br
                                    input#Firstname.form-control(type='text', name='nameFirst', placeholder='Enter your First Name')
                                .form-group
                                    label Last Name:
                                    br
                                    input#Lastname.form-control(type='text', name='nameLast', placeholder='Enter your Last Name')
                                .form-group
                                    label  E-Mail ID:
                                    br
                                    input#Email.form-control(type='text', name='id', placeholder='Enter your E-Mail')
                                .form-group
                                    label  Phone Number:
                                        br
                                        input#phoneNumber.form-control(type='text', name='phn', placeholder='Enter your Phone Number')
                                .form-group
                                    label  Password:
                                    br
                                    input#password.form-control(type='Password', name='pswd', placeholder='Enter your Password')
                                .form-group
                                    label  Current City:
                                    br
                                    input#city.form-control(type='text', name='city', placeholder='Enter your current City')
                                input.btn.btn-black.btn-md(type='submit', value='Submit')
